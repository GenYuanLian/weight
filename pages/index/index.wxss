/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/*button*/
.btn { 
 width: 80%; 
 padding: 20rpx 0; 
 border-radius: 10rpx; 
 text-align: center; 
 margin: 40rpx 10%; 
 background: #000; 
 color: #fff; 
} 
  
/*mask*/
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 
  
/*content*/
.drawer_box { 
  overflow: hidden; 
  position: fixed;  
  z-index: 1001; 
  background:#FFFFFF;
  top: 50%;
  left: 50%;
  height: 24%;
  width: 70%;
  margin: -15% 0 0 -35%; 
} 
  
.drawer_title{ 
 padding:1px; 
 font: 20px; 
 text-align: left; 
} 
.drawer_content { 
 height: 90px;  
 overflow-y: scroll; /*超出父盒子高度可滚动*/
 align-items: center;
} 
  
.btn_ok{ 
 padding: 0px; 
 font: 20px; 
 text-align: center; 
 border-top: 1px solid #E8E8EA; 
 color: #3CC51F; 
} 
  
